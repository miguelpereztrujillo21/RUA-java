<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Guías para mejor alineación -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineImageEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.20" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineButtonStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75" />



        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageProfile"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_person_placeholder"
            app:layout_constraintEnd_toStartOf="@id/guidelineImageEnd"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            tools:text="John Doe"
            app:layout_constraintStart_toStartOf="@id/guidelineImageEnd"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guidelineButtonStart" />

        <TextView
            android:id="@+id/textEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp"
            tools:text="john.doe@example.com"
            app:layout_constraintStart_toStartOf="@id/guidelineImageEnd"
            app:layout_constraintTop_toBottomOf="@id/textName"
            app:layout_constraintEnd_toStartOf="@id/guidelineButtonStart" />

        <TextView
            android:id="@+id/textPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="2dp"
            tools:text="📞 +1 234 567 8900"
            app:layout_constraintStart_toStartOf="@id/guidelineImageEnd"
            app:layout_constraintTop_toBottomOf="@id/textEmail"
            app:layout_constraintEnd_toStartOf="@id/guidelineButtonStart" />

        <TextView
            android:id="@+id/textCell"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="2dp"
            tools:text="📱 +1 234 567 8901"
            app:layout_constraintStart_toStartOf="@id/guidelineImageEnd"
            app:layout_constraintTop_toBottomOf="@id/textPhone"
            app:layout_constraintEnd_toStartOf="@id/guidelineButtonStart" />

        <TextView
            android:id="@+id/textAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="2dp"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="🏠 123 Main St, City, Country"
            app:layout_constraintStart_toStartOf="@id/guidelineImageEnd"
            app:layout_constraintTop_toBottomOf="@id/textCell"
            app:layout_constraintEnd_toStartOf="@id/guidelineButtonStart" />

        <TextView
            android:id="@+id/textGender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp"
            tools:text="⚥ Male"
            app:layout_constraintStart_toStartOf="@id/guidelineImageEnd"
            app:layout_constraintTop_toBottomOf="@id/textAddress"
            app:layout_constraintEnd_toStartOf="@id/textAge"
            app:layout_constraintHorizontal_chainStyle="spread_inside" />

        <TextView
            android:id="@+id/textAge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp"
            tools:text="🎂 25 años"
            app:layout_constraintStart_toEndOf="@id/textGender"
            app:layout_constraintTop_toBottomOf="@id/textAddress"
            app:layout_constraintEnd_toStartOf="@id/textNationality" />

        <TextView
            android:id="@+id/textNationality"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp"
            tools:text="🌍 US"
            app:layout_constraintStart_toEndOf="@id/textAge"
            app:layout_constraintTop_toBottomOf="@id/textAddress"
            app:layout_constraintEnd_toStartOf="@id/guidelineButtonStart" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonAddToContacts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="36dp"
            android:layout_marginStart="8dp"
            style="@style/Widget.MaterialComponents.Button"
            android:text="@string/add_to_contacts"
            android:textSize="10sp"
            android:paddingHorizontal="4dp"
            android:paddingVertical="6dp"
            android:layout_marginBottom="6dp"
            android:ellipsize="none"
            android:singleLine="false"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="@id/guidelineButtonStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonShowQR"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="36dp"
            android:layout_marginStart="8dp"
            android:text="@string/show_qr"
            style="@style/Widget.MaterialComponents.Button"
            android:textSize="10sp"
            android:paddingHorizontal="4dp"
            android:paddingVertical="6dp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="@id/guidelineButtonStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/buttonAddToContacts" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
